<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-plus"></span> Add Poll</h1>
    
    <form action="/api/addpoll" method="post">
        <div class="form-group">
            <label>Question</label>
            <input type="text" class="form-control" name="question">
        </div>
        <div class="form-group answers">
            <label>Answers</label>
            <input type="text" class="form-control" name="answers" id="a0">
            <input type="text" class="form-control" name="answers" id="a1">
            <button type="button" class="btn btn-default btn-md" id="addOption"><span class="fa fa-plus"></span> more options</button>
        </div>
        
        <button type="submit" class="btn btn-warning btn-md">Create Poll</button>
        
    </form>
</div>

</div>
<script type="text/javascript" src="/controllers/addpollCtrl.client.js"></script>
</body>
</html>