<!doctype html>
<html>
<head>
    <title><%= poll[0].question %> - VoxApp</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
</head>
<body>
    <% if (!user) { %>
        <% include ./partials/loginbar %>
    <% } else { %>
        <% include ./partials/userbar %>
    <% } %>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-question"></span> <%= poll[0].question %></h1>
    <well>Copy link:<span id="link" hidden><%= `https://${host}${path}` %></span> <span class="fa fa-copy" id="copy"></span> 
    </well>

    <ul>
        <% for(var j=0; j<poll[0].answers.length; j++) {%>
        <li id="<%= poll[0].answers[j]._id %>" class="option"><span class="fa fa-angle-right"></span> <%= poll[0].answers[j].answer %>   <span><%= poll[0].answers[j].votes %></span></li>
        <% } %>
    </ul>
    <% if (user) { %>
        <form>
            <div class="form-group answer">
                <label>Answer:</label>
                <input type="text" class="form-control" name="answer" id="answer" required>
                <button class="btn btn-warning btn-md" id="addoption"><span class="fa fa-plus"></span></button>
                <input type="hidden" class="form-control" name="pollid" id="pollid" value="<%=poll[0]._id%>">
            </div>
        </form>
    <% } %>
    
    <canvas id="votesChart" width="400" height="400"></canvas>
</div>

</div>
<% include ./partials/footer %>
<script type="text/javascript" src="/controllers/pollCtrl.client.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.bundle.min.js"></script>
<script>
    const answers = [];
    const votes = [];
    const colorsBack = [];
    const colorsBord = [];
    
    <%- JSON.stringify(poll[0].answers) %>//.filter(v => v.votes !== 0)
        .sort((a,b)=> b.votes - a.votes)
        .forEach(v => {
            answers.push(v.answer);
            votes.push(v.votes);
            let r = Math.floor(Math.random() * 192) + 64;
            let g = Math.floor(Math.random() * 192) + 64;
            let b = Math.floor(Math.random() * 192) + 64;
            colorsBack.push(`rgba(${r}, ${g},${b}, 0.3`);
            colorsBord.push(`rgba(${r}, ${g},${b}, 1`);
        });
    const ctx = document.getElementById('votesChart').getContext("2d");
     
    const chart = new Chart(ctx, {
        type: 'horizontalBar',
        data: {
        labels: answers,
        datasets: [{
            label: '# of Votes',
            data: votes,
            backgroundColor: colorsBack,
            borderColor: colorsBord,
            borderWidth: 1
        }]
    },
        options: {
        scales: {
            xAxes: [{
                position: "top",
                ticks: { 
                    beginAtZero: true,
                    stepSize: 1
                },
                stacked: true,
            }],
            yAxes: [{
                ticks: {
                    beginAtZero:true, 
                    mirror: true,
                    padding: -5
                },
            }]
        }
    }
    });
</script>
</body>
</html>